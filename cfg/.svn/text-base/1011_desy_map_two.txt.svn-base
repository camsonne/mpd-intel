        ch=11;   // 0-15
        pos=0;  // position      
        side=3; // module size 0,1,2,3 
      },
// x - lower side
      {
        mpd=2;  // 0 ...
        ch=0;   // 0-15
        pos=1;  // position      
        side=0; // module size 0,1,2,3 
      },
      {
        mpd=2;  // 0 ...
        ch=1;   // 0-15
        pos=3;  // position      
